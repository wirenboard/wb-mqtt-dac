{
    "type": "object",
    "title": "Analog Outputs Configuration",
    "description": "Controller analog outputs configuration",
    "configPath": "/etc/wb-mqtt-dac.conf",
    "configFile": {
        "path": "/etc/wb-mqtt-dac.conf",
        "service": "wb-rules"
    },
    "definitions": {
        "commonProperties": {
            "properties": {
                "id": {
                    "type": "string",
                    "title": "MQTT id",
                    "propertyOrder": 1
                },
                "multiplier": {
                    "type": "number",
                    "title": "Multiplier",
                    "description": "multiplier_description",
                    "propertyOrder": 2
                },
                "max_value_mv": {
                    "type": "number",
                    "title": "Maximum output voltage",
                    "description": "mV",
                    "propertyOrder": 3
                },
                "iio_channel": {
                    "type": "integer",
                    "title": "IIO channel number",
                    "propertyOrder": 5
                }
            },
            "required": [
                "id",
                "multiplier",
                "max_value_mv",
                "iio_channel"
            ]
        },
        "dac_channel": {
            "title": "Channel",
            "oneOf": [
                {
                    "title": "DAC channel with IIO device number",
                    "allOf": [
                        {
                            "type": "object",
                            "properties": {
                                "iio_device": {
                                    "type": "integer",
                                    "title": "IIO device number",
                                    "propertyOrder": 4
                                }
                            },
                            "required": [
                                "iio_device"
                            ]
                        },
                        { "$ref": "#/definitions/commonProperties"}
                    ],
                    "defaultProperties": [
                        "id",
                        "multiplier",
                        "max_value_mv",
                        "iio_device",
                        "iio_channel"
                    ]
                },
                {
                    "title": "DAC channel with IIO device name",
                    "allOf": [
                        {
                            "type": "object",
                            "properties": {
                                "iio_of_name": {
                                    "type": "string",
                                    "title": "IIO device name",
                                    "propertyOrder": 4
                                }
                            },
                            "required": [
                                "iio_of_name"
                            ]
                        },
                        { "$ref": "#/definitions/commonProperties"}
                    ],
                    "defaultProperties": [
                        "id",
                        "multiplier",
                        "max_value_mv",
                        "iio_of_name",
                        "iio_channel"
                    ]
                }
            ]
        }
    },
    "properties": {
        "device_name": {
            "type": "string",
            "title": "MQTT device name",
            "default": "Analog Outputs",
            "propertyOrder": 1
        },
        "channels": {
            "type": "array",
            "title": "List of DAC channels",
            "items": {
                "$ref": "#/definitions/dac_channel"
            },
            "_format": "",
            "propertyOrder": 2
        }
    },
    "required": ["device_name", "channels"],

    "translations": {
        "en": {
            "multiplier_description": "The DAC output voltage is multiplied to this factor to get the resulting output value"
        },
        "ru": {
            "Analog Outputs Configuration": "Аналоговые выходы",
            "Controller analog outputs configuration": "Конфигурация аналоговых выходов контроллера",
            "DAC channel with IIO device number": "Канал ЦАП, заданный номером IIO устройства",
            "DAC channel with IIO device name": "Канал ЦАП, заданный именем IIO устройства",
            "MQTT id": "Название канала MQTT",
            "Multiplier": "Множитель",
            "Maximum output voltage": "Максимальное выходное напряжение",
            "IIO device number": "Номер устройства IIO",
            "IIO device name": "Имя устройства IIO",
            "IIO channel number": "Номер канала IIO",
            "MQTT device name": "Имя устройства MQTT",
            "List of DAC channels": "Список каналов ЦАП",
            "multiplier_description": "Итоговое значение получается умножением выходного напряжения ЦАП на указанное число",
            "mV": "мВ",
            "Channel": "Канал"
        }
    }
}
